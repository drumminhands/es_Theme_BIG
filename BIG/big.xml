                <forceUppercase>0</forceUppercase>
                <fontPath>./_inc/fonts/InputMonoCompressed-Bold.ttf</fontPath>
                <fontSize>0.024</fontSize>
                <size>0.23 0.02</size>
            </text>
            <datetime name="md_releasedate, md_lastplayed">
                <color>000000</color>
                <forceUppercase>0</forceUppercase>
                <fontPath>./_inc/fonts/InputMonoCompressed-Bold.ttf</fontPath>
