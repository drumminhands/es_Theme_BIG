<theme>

    <formatVersion>4</formatVersion>

    <view name="system, basic, detailed">

        <image name="background_color" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <color>434244</color>
        </image>

        <image name="background_help" extra="true">
            <path>./_inc/images/bg_color_menu.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.125</size>
            <color>d30013</color>
        </image>

        <helpsystem name="help">
            <textColor>e6e6e7</textColor>
            <iconColor>e6e6e7</iconColor>
			<pos>0.03 0.92</pos>
            <fontPath>./_inc/fonts/InputMonoCompressed-Bold.ttf</fontPath>
            <fontSize>0.06</fontSize>
        </helpsystem>

    </view>

    <view name="basic">

        <image name="background_logo" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 0.18</size>
            <color>434244</color>
        </image>

		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.09</pos>
			<maxSize>0.4 0.16</maxSize>
		</image>

        <image name="background_gamelist" extra="true">
            <path>./_inc/images/bg_color_gamelist.png</path>
            <origin>0 0</origin>
            <pos>0 0.2</pos>
            <size>1 0.67</size>
            <color>6d6e70</color>
        </image>

		<textlist name="gamelist">
			<selectorColor>FFFFFF</selectorColor>
			<selectedColor>000000</selectedColor>
			<primaryColor>bbbcbf</primaryColor>
			<secondaryColor>6d6e70</secondaryColor>
			<fontPath>./_inc/fonts/InputMonoCompressed-Bold.ttf</fontPath>
			<pos>0 0.2</pos>
			<size>1 0.65</size>
			<fontSize>0.125</fontSize>
		</textlist>

    </view>

    <view name="detailed">

        <image name="background_logo_gamelist" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0.01 0.02</pos>
            <size>0.35 0.83</size>
            <color>000000</color>
        </image>

		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.186 0.14</pos>
			<maxSize>0.33 0.19</maxSize>
		</image>

		<textlist name="gamelist">
		<selectorColor>FFFFFF</selectorColor>
		<selectedColor>000000</selectedColor>
		<primaryColor>bbbcbf</primaryColor>
		<secondaryColor>6d6e70</secondaryColor>
			<fontPath>./_inc/fonts/InputMonoCompressed-Bold.ttf</fontPath>
			<pos>0.02 0.25</pos>
			<size>0.33 0.64</size>
			<fontSize>0.125</fontSize>
			<horizontalMargin>0.05</horizontalMargin>
		</textlist>

        <image name="background_image" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0.37 0.02</pos>
            <size>0.35 0.62</size>
            <color>434244</color>
        </image>

            <image name="md_image">
                <origin>0.5 0.5</origin>
                <pos>0.545 0.33</pos>
                <maxSize>0.33 0.58</maxSize>
            </image>

        <image name="background_metadata" extra="true">
            <path>./_inc/images/bg_color.png</path>
